    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend",
            "type": "chrome",
            "url": "https://localhost:4200",
            "request": "launch",
            "webRoot": "${workspaceFolder}/ClientApp",
            "preLaunchTask": "ng"
        },
        {
            "name": "Launch Backend",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/EcoChallenger/bin/Debug/net8.0/EcoChallenger.dll",
            "args": [],
            "cwd": "${workspaceFolder}/EcoChallenger",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            },
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Ui+Portal",
            "configurations": ["Launch Backend", "Launch Frontend"],
            "stopAll": true
        }
    ]
}